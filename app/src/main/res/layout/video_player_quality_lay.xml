<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">

    <ImageView
        android:id="@+id/tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/divider13"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hd_1080_optn"
        style="@style/normaltxt_18spsemibold"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="HD"
        android:textColor="@color/new_black"
        app:layout_constraintEnd_toEndOf="@+id/divider13"
        app:layout_constraintStart_toStartOf="@+id/divider13"
        app:layout_constraintTop_toBottomOf="@+id/divider13" />

    <View
        android:id="@+id/divider14"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hd_1080_optn" />


    <View
        android:id="@+id/divider15"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider14" />


    <TextView
        android:id="@+id/sd_360_optn"
        style="@style/normaltxt_18spsemibold"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="SD"
        android:textColor="@color/new_black"
        app:layout_constraintEnd_toEndOf="@+id/divider15"
        app:layout_constraintStart_toStartOf="@+id/divider15"
        app:layout_constraintTop_toBottomOf="@+id/divider15" />

    <View
        android:id="@+id/divider17"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sd_360_optn" />

    <TextView
        android:id="@+id/md_optn"
        style="@style/normaltxt_18spsemibold"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="MD"
        android:textColor="@color/new_black"
        app:layout_constraintEnd_toEndOf="@+id/divider17"
        app:layout_constraintStart_toStartOf="@+id/divider17"
        app:layout_constraintTop_toBottomOf="@+id/divider17" />

    <View
        android:id="@+id/divider18"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/md_optn" />

    <TextView
        android:id="@+id/hls_optn"
        style="@style/normaltxt_18spsemibold"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="HLS"
        android:textColor="@color/new_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/divider18"
        app:layout_constraintStart_toStartOf="@+id/divider18"
        app:layout_constraintTop_toBottomOf="@+id/divider18" />
</androidx.constraintlayout.widget.ConstraintLayout>