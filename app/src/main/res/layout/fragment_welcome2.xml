<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobulous.fragments.AuthFragment.WelcomeFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/lay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1.5"
        app:srcCompat="@drawable/onboarding_test_full" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintVertical_weight="2">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintVertical_weight="2">


            <TextView
                android:id="@+id/textView"
                style="@style/normaltxt_24sp_segoe_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_marginEnd="@dimen/dp_32"
                android:gravity="center_horizontal"
                android:text="Studio Classes for all your equipment and more."
                android:textSize="@dimen/sp_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                style="@style/normaltxt_14sp_segoeui_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                android:gravity="center_horizontal"
                android:text="1000+ studio classes with new classes added every day!"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/trl_btn_LoginOptin"
                style="@style/normaltxt_16sp_segui_semi_bold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_29"
                android:background="@drawable/drawable_common_rectangle"
                android:gravity="center"
                android:text="Start 7 day free trial"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/tv_tk_lool_LoginOption"
                style="@style/normaltxt_16sp_segui_semi_bold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@drawable/drawable_stroke_red"
                android:gravity="center"
                android:text="Take a look inside"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_16"
                app:layout_constraintEnd_toEndOf="@+id/trl_btn_LoginOptin"
                app:layout_constraintStart_toStartOf="@+id/trl_btn_LoginOptin"
                app:layout_constraintTop_toBottomOf="@+id/trl_btn_LoginOptin" />

            <TextView
                android:id="@+id/tv_already_sign_LoginOption"
                style="@style/normaltxt_16sp_segui_semi_bold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@drawable/drawable_stroke_red"
                android:gravity="center"
                android:text="Already a member? Sign in"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_16"
                app:layout_constraintEnd_toEndOf="@+id/trl_btn_LoginOptin"
                app:layout_constraintStart_toStartOf="@+id/trl_btn_LoginOptin"
                app:layout_constraintTop_toBottomOf="@+id/trl_btn_LoginOptin" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


